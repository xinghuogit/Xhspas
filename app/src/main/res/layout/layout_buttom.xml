<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageView
        style="@style/split_line_h"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buttom_tv_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/select_buttom_home"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/select_color_overall_bottom"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/buttom_tv_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/select_buttom_category"
            android:gravity="center"
            android:text="@string/category"
            android:textColor="@color/select_color_overall_bottom"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/buttom_tv_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/select_buttom_cart"
            android:gravity="center"
            android:text="@string/cart"
            android:textColor="@color/select_color_overall_bottom"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/buttom_tv_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/select_buttom_my"
            android:gravity="center"
            android:text="@string/my"
            android:textColor="@color/select_color_overall_bottom"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>